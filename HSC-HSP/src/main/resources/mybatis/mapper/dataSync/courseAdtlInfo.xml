<?xml version="1.0" encoding="UTF-8"?> 

<!DOCTYPE mapper 
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="api.dataSync.courseAdtlInfo">

	<!--
		Template 
	-->
	<sql id="select_template">
		SELECT
			B.COURSE_ID courseId
			, B.TORY_CD toryCd
			, B.LIST_VIEW_YN listViewYn
			, B.REG_CMPLT_YN regCmpltYn
			, B.FMY_SITE_DS_CD fmySiteDsCd
	</sql>
	
	<sql id="from_template">
		FROM 
			<include refid="api.dataSync.course.tb_course_hsc" /> A
			INNER JOIN EBSLMS_R.TB_COURSE_ADTL_INFO B ON A.COURSE_ID = B.COURSE_ID
	</sql>
	
	<sql id="where_deltYnToN_template">
		WHERE 
			IF(B.DELT_YN IS NULL OR B.DELT_YN = '', 'N', B.DELT_YN) = 'N'
	</sql>
	
	<sql id="where_deltYnToY_template">
		WHERE 
			IF(B.DELT_YN IS NULL OR B.DELT_YN = '', 'N', B.DELT_YN) = 'Y'
	</sql>
	
	<sql id="and_createDate_template">
			AND B.CREATE_DATE <![CDATA[>=]]> CONCAT(#{date}, '000000')
			AND B.CREATE_DATE <![CDATA[<=]]> CONCAT(#{date}, '235959')
	</sql>
	
	<sql id="and_editDate_template">
			AND B.EDIT_DATE <![CDATA[>=]]> CONCAT(#{date}, '000000')
			AND B.EDIT_DATE <![CDATA[<=]]> CONCAT(#{date}, '235959')
	</sql>
	
	<sql id="orderBy_template">
		ORDER BY
			B.COURSE_ID
	</sql>
	
	<!--
		Query 
	-->
	<select id="findCreateData" resultType="courseAdtlInfo" parameterType="String">
		/* api.dataSync.courseAdtlInfo.findCreateData */
		<include refid="select_template" />
		<include refid="from_template" />
		<include refid="where_deltYnToN_template" />
		<include refid="and_createDate_template" />
		<include refid="orderBy_template" />
	</select>
	
	<select id="findUpdateData" resultType="courseAdtlInfo" parameterType="String">
		/* api.dataSync.courseAdtlInfo.findUpdateData */
		<include refid="select_template" />
		<include refid="from_template" />
		<include refid="where_deltYnToN_template" />
		<include refid="and_editDate_template" />
		<include refid="orderBy_template" />
	</select>
	
	<select id="findDeleteData" resultType="courseId" parameterType="String">
		/* api.dataSync.courseAdtlInfo.findDeleteData */
		SELECT
			B.COURSE_ID courseId
		<include refid="from_template" />
		<include refid="where_deltYnToY_template" />
		<include refid="and_editDate_template" />
		<include refid="orderBy_template" />
	</select>
	
</mapper>