<?xml version="1.0" encoding="UTF-8"?> 

<!DOCTYPE mapper 
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="api.dataSync.courseClsfn.hsc">

	<!--
		Template 
	-->
	<sql id="select_template">
		SELECT
			DISTINCT 
			A.CLSFN_SYST_ID clsfnSystId
			, A.HGRNK_CLSFN_SYST_ID hgrnkClsfnSystId
			, A.CLSFN_SYST_NM clsfnSystNm
			, A.SORT_SEQ sortSeq
			, A.FMY_SITE_DS_CD fmySiteDsCd
	</sql>
	
	<sql id="from_template">
		FROM
			EBSLMS_R.TB_COURSE_CLSFN A
	</sql>
	
	<sql id="where_fmySiteDsCd_template">
		WHERE
			A.FMY_SITE_DS_CD = 'EBSI'
	</sql>
	
	<sql id="and_deltYnToN_template">
			AND IF(A.DELT_YN IS NULL OR A.DELT_YN = '', 'N', A.DELT_YN) = 'N'
	</sql>
	
	<sql id="and_deltYnToY_template">
			AND IF(A.DELT_YN IS NULL OR A.DELT_YN = '', 'N', A.DELT_YN) = 'Y'
	</sql>
	
	<sql id="and_createDate_template">
			AND A.CREATE_DATE <![CDATA[>=]]> CONCAT(#{date}, '000000')
			AND A.CREATE_DATE <![CDATA[<=]]> CONCAT(#{date}, '235959')
	</sql>
	
	<sql id="and_editDate_template">
			AND A.EDIT_DATE <![CDATA[>=]]> CONCAT(#{date}, '000000')
			AND A.EDIT_DATE <![CDATA[<=]]> CONCAT(#{date}, '235959')
	</sql>
	
	<sql id="orderBy_template">
		ORDER BY 
			A.HGRNK_CLSFN_SYST_ID
			, A.CLSFN_SYST_ID
	</sql>
	
	<!--
		Query 
	-->
	<select id="findCreateData" resultType="courseClsfnRl" parameterType="String">
		/* api.dataSync.courseClsfn.hsc.findCreateData */
		<include refid="select_template" />
		<include refid="from_template" />
		<include refid="where_fmySiteDsCd_template" />
		<include refid="and_deltYnToN_template" />
		<include refid="and_createDate_template" />
		<include refid="orderBy_template" />
	</select>
	
	<select id="findUpdateData" resultType="courseClsfnRl" parameterType="String">
		/* api.dataSync.courseClsfn.hsc.findUpdateData */
		<include refid="select_template" />
		<include refid="from_template" />
		<include refid="where_fmySiteDsCd_template" />
		<include refid="and_deltYnToN_template" />
		<include refid="and_editDate_template" />
		<include refid="orderBy_template" />
	</select>
	
	<select id="findDeleteData" resultType="clsfnSystId" parameterType="String">
		/* api.dataSync.courseClsfn.hsc.findDeleteData */
		SELECT
			A.CLSFN_SYST_ID clsfnSystId
		<include refid="from_template" />
		<include refid="where_fmySiteDsCd_template" />
		<include refid="and_deltYnToY_template" />
		<include refid="and_editDate_template" />
		<include refid="orderBy_template" />
	</select>
	
</mapper>