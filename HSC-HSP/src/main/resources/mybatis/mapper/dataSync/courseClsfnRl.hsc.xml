<?xml version="1.0" encoding="UTF-8"?> 

<!DOCTYPE mapper 
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="api.dataSync.courseClsfnRl.hsc">

	<!--
		Template 
	-->
	<sql id="select_template">
		SELECT 
			B.CLSFN_SYST_ID clsfnSystId
			, B.COURSE_ID courseId
			, B.SORT_SEQ sortSeq
			, B.FMY_SITE_DS_CD fmySiteDsCd
	</sql>
	
	<sql id="from_template">
		FROM
			<include refid="api.dataSync.course.tb_course_hsc" /> A
			INNER JOIN EBSLMS_R.TB_COURSE_CLSFN_RL B ON A.COURSE_ID = B.COURSE_ID AND A.FMY_SITE_DS_CD = B.FMY_SITE_DS_CD
	</sql>
	
	<sql id="where_fmySiteDsCd_template">
		WHERE
			A.FMY_SITE_DS_CD = 'EBSI'
	</sql>
	
	<sql id="and_deltYnToN_template">
			AND IF(B.DELT_YN IS NULL OR B.DELT_YN = '', 'N', B.DELT_YN) = 'N'
	</sql>
	
	<sql id="and_deltYnToY_template">
			AND IF(B.DELT_YN IS NULL OR B.DELT_YN = '', 'N', B.DELT_YN) = 'Y'
	</sql>
	
	<sql id="and_createDate_template">
			AND B.CREATE_DATE <![CDATA[>=]]> CONCAT(#{date}, '000000')
			AND B.CREATE_DATE <![CDATA[<=]]> CONCAT(#{date}, '235959')
	</sql>
	
	<sql id="and_editDate_template">
			AND B.EDIT_DATE <![CDATA[>=]]> CONCAT(#{date}, '000000')
			AND B.EDIT_DATE <![CDATA[<=]]> CONCAT(#{date}, '235959')
	</sql>
	
	<sql id="orderBy_template">
		ORDER BY
			B.COURSE_ID
			, B.CLSFN_SYST_ID
			, B.SORT_SEQ
	</sql>
	
	<!--
		Query 
	-->
	<select id="findCreateData" resultType="courseClsfnRl" parameterType="String">
		/* api.dataSync.courseClsfnRl.hsc.findCreateData */
		<include refid="select_template" />
		<include refid="from_template" />
		<include refid="where_fmySiteDsCd_template" />
		<include refid="and_deltYnToN_template" />
		<include refid="and_createDate_template" />
		<include refid="orderBy_template" />
	</select>
	
	<select id="findUpdateData" resultType="courseClsfnRl" parameterType="String">
		/* api.dataSync.courseClsfnRl.hsc.findUpdateData */
		<include refid="select_template" />
		<include refid="from_template" />
		<include refid="where_fmySiteDsCd_template" />
		<include refid="and_deltYnToN_template" />
		<include refid="and_editDate_template" />
		<include refid="orderBy_template" />
	</select>
	
	<select id="findDeleteData" resultType="clsfnSystIdAndCourseId" parameterType="String">
		/* api.dataSync.courseClsfnRl.hsc.findDeleteData */
		SELECT
			B.CLSFN_SYST_ID clsfnSystId
			, B.COURSE_ID courseId
		<include refid="from_template" />
		<include refid="where_fmySiteDsCd_template" />
		<include refid="and_deltYnToY_template" />
		<include refid="and_editDate_template" />
		<include refid="orderBy_template" />
	</select>
	
</mapper>